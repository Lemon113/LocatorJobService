<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fsprite.aarkh.locatorjobservice.TestServiceActivity">

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" start service button "
        android:onClick="onStartServiceButtonPressed"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" stop service buttin"
        android:onClick="onStopServiceButtonPressed"
        app:layout_constraintBottom_toBottomOf="parent"/>

</LinearLayout>
